# SuperNavi EDGE Environment Variables

# ============================================================================
# Remote Preview Publisher (Wasabi S3)
# ============================================================================

# Enable/disable remote preview publishing
PREVIEW_REMOTE_ENABLED=true

# Maximum zoom level to upload (0-6 recommended for preview)
PREVIEW_MAX_LEVEL=6

# Concurrent tile uploads
PREVIEW_UPLOAD_CONCURRENCY=8

# S3 key prefix for previews
PREVIEW_PREFIX_BASE=previews

# Wasabi S3 Configuration
S3_BUCKET=supernavi-eu
S3_ENDPOINT=https://s3.eu-central-1.wasabisys.com
S3_REGION=eu-central-1
S3_ACCESS_KEY=your_access_key_here
S3_SECRET_KEY=your_secret_key_here
S3_FORCE_PATH_STYLE=true

# ============================================================================
# Tile Pre-Generation
# ============================================================================

# Max DeepZoom level to pre-generate during P0 processing (0 = disabled)
# Higher values = more tiles pre-generated but slower P0
# Recommended: 8-12 (level 8 ≈ 9 tiles, level 12 ≈ 50+ tiles)
PREGENERATE_MAX_LEVEL=8

# ============================================================================
# Sync Engine
# ============================================================================

# Cloud sync endpoint
CLOUD_SYNC_URL=https://api.supernavi.app

# Sync authentication
SYNC_TOKEN=your_sync_token_here
AGENT_ID=local-agent-001
LAB_ID=lab-001

# Sync settings
SYNC_BATCH_SIZE=50
SYNC_INTERVAL_MS=5000
SYNC_MAX_RETRY=10

# ============================================================================
# Edge Tunnel (for same-origin tile access via cloud)
# ============================================================================

# Cloud WebSocket tunnel endpoint
CLOUD_TUNNEL_URL=wss://app.supernavi.app/edge/connect

# Authentication token (must match EDGE_TUNNEL_TOKEN on cloud)
EDGE_TUNNEL_TOKEN=your-secure-token-here

# Unique identifier for this edge agent (e.g., "lab01", "hospital-main")
EDGE_AGENT_ID=lab01
